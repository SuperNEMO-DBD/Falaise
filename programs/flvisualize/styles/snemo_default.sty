# -*- mode: conf-unix; -*-

[name="browser_settings"]

#@description Setup label
setup_label : string = "snemo"

#@description Tab to view at startup.
# 0: 3D Display 1: Raw Data 2: Options, 3: Selection
startup_tab : integer = 0

#@description Background color of displays
background_color : integer[3] = 0 0 0

#########################################################

[name="geometry_settings"]

#@description List of volumes to take care
volume_category_list : string[9] = "module"            \
                                   "calorimeter_block" \
                                   "calorimeter_pmt"   \
                                   "xcalo_block"       \
                                   "gveto_block"       \
                                   "drift_cell_core"   \
                                   "source_strip"  \
                                   "source_pad"  \
                                   "source_pad_bulk"

#@description Volume visibility (visible/invisible/disable)
module.visibility            : string = "invisible"
calorimeter_block.visibility : string = "visible"
calorimeter_pmt.visibility   : string = "invisible"
xcalo_block.visibility       : string = "invisible"
gveto_block.visibility       : string = "invisible"
drift_cell_core.visibility   : string = "disable"
source_strip.visibility      : string = "visible"
source_pad.visibility        : string = "visible"
source_pad_bulk.visibility   : string = "visible"

#@description Volume color
module.color            : integer = 2
calorimeter_block.color : integer = 923
calorimeter_pmt.color   : integer = 923
xcalo_block.color       : integer = 923
gveto_block.color       : integer = 923
drift_cell_core.color   : integer = 41
source_strip.color      : integer = 863
source_pad.color        : integer = 3
source_pad_bulk.color   : integer = 4

#@description Volume transparency (0-100 range)
module.transparency            : integer = 80
calorimeter_block.transparency : integer = 90
calorimeter_pmt.transparency   : integer = 80
xcalo_block.transparency       : integer = 80
gveto_block.transparency       : integer = 80
drift_cell_core.transparency   : integer = 80
source_strip.transparency      : integer = 50

#########################################################

[name="particle_settings"]

#@description MC particle color
gamma.color                : string = "kYellow"
electron.color             : string = "kBlue"
positron.color             : string = "kCyan"
alpha.color                : string = "kMagenta"
delta_ray_from_alpha.color : string = "kRed"

#########################################################

[name="miscellaneous"]

#@description MC line style
mc_line_style : string = "kSolid"
mc_line_width : integer = 1

#@description Figure save options
save.directory : string = "."
save.extension : string = ".eps"
save.prefix    : string = "event_"

