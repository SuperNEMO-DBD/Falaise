#@description The definitions for variant parameters related to the vertex generation on calibration sources
#@key_label   "name"
#@meta_label  "type"


[name="source_calibration.bi207.basic.VM" type="variant"]
  #@config A variant model describing the set of parameters associated to the simplified basic Bi207 source calibration setup
  display_name       : string = "Basic Bi207 source calibration"
  terse_description  : string = "The configuration parameters for the basic Bi207 source calibration"


[name="source_calibration.sds.track.on_off.PM" type="parameter"]
  #@config A parameter model describing the activation of the source calibration track
  display_name        : string = "Basic simpified source calibration track activation"
  terse_description   : string = "The activation of a source calibration track"
  mutability          : string = "variable"
  type                : string = "boolean"
    boolean.default       : boolean = true
    boolean.true.variant  : string = "is_active"
    boolean.false.variant : string = "is_inactive"
  variants : string[2] = "is_active" "is_inactive"
    variants.is_active.model         : string = "datatools::basic::is_on.VM"
    variants.is_active.description   : string = "Deploy the source calibration track (default)"
    variants.is_inactive.model       : string = "datatools::basic::is_off.VM"
    variants.is_inactive.description : string = "Do not deploy the source calibration track"


[name="source_calibration.sds.VM" type="variant"]
  #@config A variant model describing the set of parameters associated to the realistic Bi207 source calibration deployment system (SDS)
  display_name       : string = "SDS source calibration (Bi207)"
  terse_description  : string = "The configuration parameters for the SDS Bi207 source calibration"
  parameters : string[6] = "track0" "track1" "track2" "track3" "track4" "track5"
    parameters.track0.model       : string = "source_calibration.sds.track.on_off.PM"
    parameters.track0.description : string = "Source calibration SDS track 0 deployment"
    parameters.track1.model       : string = "source_calibration.sds.track.on_off.PM"
    parameters.track1.description : string = "Source calibration SDS track 1 deployment"
    parameters.track2.model       : string = "source_calibration.sds.track.on_off.PM"
    parameters.track2.description : string = "Source calibration SDS track 2 deployment"
    parameters.track3.model       : string = "source_calibration.sds.track.on_off.PM"
    parameters.track3.description : string = "Source calibration SDS track 3 deployment"
    parameters.track4.model       : string = "source_calibration.sds.track.on_off.PM"
    parameters.track4.description : string = "Source calibration SDS track 4 deployment"
    parameters.track5.model       : string = "source_calibration.sds.track.on_off.PM"
    parameters.track5.description : string = "Source calibration SDS track 5 deployment"


[name="source_calibration.type.PM" type="parameter"]
  #@config A parameter describing the type of the source calibration setup
  display_name              : string = "Type of the source calibration setup"
  terse_description         : string = "The type of the source calibration setup"
  mutability : string = "variable"
    variable.mode : string = "enumeration"
  type : string = "string"
    string.default            : string = "Bi207"
    string.enumerated.size    : integer = 2
    string.enumerated_0.value     : string = "Bi207"   # Legacy Bi207 calibration source simplified setup"
    string.enumerated_0.variant   : string = "if_bi207" 
    string.enumerated_1.value     : string = "SDS"     # Realistic Bi207 calibration source deployment system (SDS)"
    string.enumerated_1.variant   : string = "if_sds"
  variants : string[2] = "if_bi207" "if_sds"
    variants.if_bi207.model        : string = "source_calibration.bi207.basic.VM"
    variants.if_bi207.description  : string = "Set of parameters for the legacy simplified Bi207 source calibration setup"
    variants.if_sds.model          : string = "source_calibration.sds.VM"
    variants.if_sds.description    : string = "Set of parameters for the realistic Bi207 source calibration source deployment system"


[name="source_calibration.description.VM" type="variant"]
  #@config A variant model describing the set of parameters associated to the source calibration setup
  display_name       : string = "Active source calibration"
  terse_description  : string = "The configuration parameters for the source calibration setup"
  parameters : string[1] = "type"
    parameters.type.model       : string = "source_calibration.type.PM"
    parameters.type.description : string = "The type of the source calibration setup"


[name="source_calibration.off_on.PM" type="parameter"]
  #@config A parameter model describing the activation of the source calibration
  display_name        : string = "Source calibration activation"
  terse_description   : string = "The activation of the source calibration"
  mutability : string = "variable"
  type : string = "boolean"
    boolean.default     : boolean = false
    boolean.true.variant : string = "is_active"
    boolean.false.variant : string = "is_inactive"
  variants : string[2] = "is_active" "is_inactive"
    variants.is_active.model       : string = "source_calibration.description.VM"
    variants.is_active.description : string = "Set of parameters for source calibration"
    variants.is_inactive.model       : string = "datatools::basic::is_off.VM"
    variants.is_inactive.description : string = "No source calibration"


[name="source_calibration.VM" type="variant"]
  #@config A variant model describing the set of parameters associated to the source calibration setup
  display_name       : string = "Source calibration"
  terse_description  : string = "The configuration parameters for the source calibration"
  parameters : string[1] = "active"
    parameters.active.model       : string = "source_calibration.off_on.PM"
    parameters.active.description : string = "The activation flag of the source calibration setup"

